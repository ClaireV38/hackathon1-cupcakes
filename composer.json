{
    "name": "wildcodeschool/simple-mvc",
    "description": "Simple from scratch PHP MVC for WildCodeSchool students",
    "authors": [
        {
            "name": "Aurelien",
            "email": "aurelien.barbier@wildcodeschool.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "twig/twig": "^3.1",
        "ext-pdo": "*",
        "mtownsend/remove-bg": "^1.2",
        "vajiral/php-image-compare": "1.0.1",
        "ext-gd": "*"
    },
    "require-dev": {
        "filp/whoops": "^2.9",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.52",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse --level=max src",
        "phpcbf": "vendor/bin/phpcbf src",
        "phpmd": "vendor/bin/phpmd src text /phpmd.xml"
    }
}
