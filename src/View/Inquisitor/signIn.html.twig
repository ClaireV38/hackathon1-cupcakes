{% extends 'layout.html.twig' %}

{% block content %}
<div class="container container-sign-In">
    <div class="intro-signin">
        <h2> Signin to discover your next prey</h2>
        <p>Connecte-toi pour déposer ton annonce et découvrir toutes nos fonctionnalités.</p>
    </div>
    <form method="POST" action="/Inquisitor/signIn" >
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Mot de passe</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn-go btn btn-custom btn-light">Go !</button>
    </form>
    <div class="account-creation">
        <p>Envie de nous rejoindre ? </p>
        <a href="/User/signUp" class="btn-account-creation btn-custom btn btn-light">Créer mon compte</a>
    </div>
</div>
{% endblock %}